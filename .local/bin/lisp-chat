#!/usr/bin/sbcl --script
;; -*- common-lisp -*-
;; Manoel Vilela

(load "~/.sbclrc")
(require :lisp-chat)

(defparameter host (cadr *posix-argv*))
(defparameter port (caddr *posix-argv*))

(when host
  (setq lisp-chat-config:*host* host))

(when port
  (setq lisp-chat-config:*port* port))

(lisp-chat-client:main)
