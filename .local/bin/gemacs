#!/bin/bash

has-frame () {
    emacsclient -n -e "(plusp (length (remove-if (lambda (x) \
                                                         (null (window-system x))) \
                                                 (frame-list))))"
}

new-frame () {
    emacsclient -c -n -a "" "$@"
}

open-frame () {
    emacsclient -n -a "" "$@"
}

raise-frames () {
    open-frame -e "(mapcan (lambda (x) \
                               (when (window-system x) \
                                (progn (raise-frame x) \
                                       (x-focus-frame x)))) \
                           (frame-list))"
}

restart-emacs () {
    notify-send "Emacs daemon crashed :(" "restarting"
    gksudo -m "Need your password to restart emacs daemon." /etc/init.d/emacs.* restart
}

if-crashed-restart-emacs () {
    [[ $(rc-status --crashed) == *emacs.* || ! "$(pgrep emacs)" ]] && restart-emacs
}

main () {
    # use only if using openrc
    [[ -f /usr/bin/openrc ]] && (if-crashed-restart-emacs || exit 0)

    if [ "$(has-frame)" == "t" ]; then
        open-frame "$@" 2> /dev/null || raise-frames 1> /dev/null
    else
        new-frame "$@"
    fi

}

main "$@"
